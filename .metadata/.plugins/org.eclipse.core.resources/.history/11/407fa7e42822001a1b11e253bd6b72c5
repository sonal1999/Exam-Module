import java.awt.*;

public class Home extends Frame {
	
	Home(String title){
		setVisible(true);
		setLocation(50,50);
		setSize(750,650);
		setTitle(title);
		
	}
	
	public static void main(String[] args) {		
         Home main_Window = new Home("Admin");
         
        Label select_Subject_Label = new Label("Select Subject");
        Label question_Label = new Label("Question");
        Label options_Label = new Label("Options");
        Label answer_Label = new Label("Answer");
        
        List select_Subject_List = new List(3);
        
        select_Subject_List.add("Physics");
        select_Subject_List.add("Chemistry");
        select_Subject_List.add("Biology");
        select_Subject_List.add("Mathematics");
        
        TextArea question_Area = new TextArea("TextAera is as given",50,50,TextArea.SCROLLBARS_BOTH);
        
        TextField option1 = new TextField("1",100);
        TextField option2 = new TextField("2",100);
        TextField option3 = new TextField("3",100);
        TextField option4 = new TextField("4",100);
        TextField answer_Field = new TextField("Enter correct answer",100);
        
        Button insert = new Button("Insert");
        
        main_Window.setLayout(null);
        
        main_Window.add(select_Subject_Label);
        main_Window.add(select_Subject_List);
        main_Window.add(question_Label);
        main_Window.add(question_Area);
        main_Window.add(options_Label);
        main_Window.add(option1);
        main_Window.add(option2);
        main_Window.add(option3);
        main_Window.add(option4);
        main_Window.add(answer_Label);
        main_Window.add(answer_Field);
        main_Window.add(insert);
        
        System.out.println("Hello world");
        select_Subject_Label.setBounds(50,55,100,50);
        select_Subject_List.setBounds(300,75,100,50);
        question_Label.setBounds(50,105,100,115);
        question_Area.setBounds(300,150,400,150);
        options_Label.setBounds(300,250,100,50);
        
        
             
	}

}












